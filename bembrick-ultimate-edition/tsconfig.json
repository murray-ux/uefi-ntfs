{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "security/**/*.ts",
    "identity/**/*.ts",
    "legal/**/*.ts",
    "cert_master/**/*.ts",
    "orchestration/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rust_boundary"
  ]
}
