{
  "version": "1.0",
  "description": "GENESIS 2.0 Sovereign Security Platform - Claude Code Hooks Integration",
  "hooks": {
    "UserPromptSubmit": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/user-prompt-submit.js",
        "timeout": 5000,
        "enabled": true
      }
    ],
    "PreToolUse": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/pre-tool-use.js",
        "timeout": 3000,
        "enabled": true,
        "tools": ["*"]
      }
    ],
    "PostToolUse": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/post-tool-use.js",
        "timeout": 3000,
        "enabled": true
      }
    ],
    "PostToolUseFailure": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/post-tool-failure.js",
        "timeout": 3000,
        "enabled": true
      }
    ],
    "Stop": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/stop.js",
        "timeout": 2000,
        "enabled": true
      }
    ],
    "SessionStart": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/session-start.js",
        "timeout": 5000,
        "enabled": true
      }
    ],
    "SessionEnd": [
      {
        "command": "node ./caput-ultimate-edition/src/hooks/session-end.js",
        "timeout": 5000,
        "enabled": true
      }
    ]
  }
}
