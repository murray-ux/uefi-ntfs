# ============================================================================
# Auth Portal - Environment Configuration
# ============================================================================
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Public Directory (where static files are served from)
PUBLIC_DIR=./public

# API Configuration
API_PREFIX=/api

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Trust proxy headers (set to true if behind nginx/cloudflare)
TRUST_PROXY=false

# SSL Configuration (optional)
# SSL_KEY=/path/to/key.pem
# SSL_CERT=/path/to/cert.pem

# Session Configuration
SESSION_NAME=auth_session
SESSION_SECRET=change-this-to-a-secure-random-string
SESSION_EXPIRY=86400
EXTENDED_SESSION_EXPIRY=2592000

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_PATH=/
# COOKIE_DOMAIN=.example.com

# Database Configuration (SQLite default)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/auth.db

# PostgreSQL (optional, for production)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://user:pass@localhost:5432/authportal

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Reset
PASSWORD_RESET_EXPIRY_MS=3600000
MAX_PASSWORD_RESET_REQUESTS=5

# Email Configuration (optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_FROM=noreply@example.com

# Site Configuration
SITE_NAME=NEXUS Auth Portal
SITE_URL=http://localhost:3000

# Security
ALLOW_ACCOUNT_CREATION=true
REQUIRE_EMAIL_CONFIRMATION=false
SHOW_EXCEPTION_DETAILS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty
