# ===========================================
# GENESIS 2.0 Mobile - Environment Configuration
# ===========================================

# ------------------------------------
# API Connection
# ------------------------------------
# The URL of your GENESIS backend server
# This is where the mobile app sends all API requests

# For LOCAL development (same machine):
EXPO_PUBLIC_API_URL=http://localhost:8080

# For LOCAL development (physical device on same WiFi):
# Use your computer's local IP address (find with: ifconfig | grep inet)
# EXPO_PUBLIC_API_URL=http://192.168.1.XXX:8080

# For PRODUCTION:
# EXPO_PUBLIC_API_URL=https://api.your-domain.com

# ------------------------------------
# Optional: Expo Project Configuration
# ------------------------------------
# Your Expo account username (for EAS builds)
# EXPO_PUBLIC_OWNER=your-expo-username

# EAS Project ID (auto-generated when you run eas init)
# EXPO_PUBLIC_PROJECT_ID=your-project-id

# ------------------------------------
# Optional: Feature Flags
# ------------------------------------
# Enable/disable features for testing
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_NFC=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_AI_CHAT=true

# ------------------------------------
# Optional: AI Provider Keys (if not using backend proxy)
# ------------------------------------
# Note: It's more secure to keep these on the backend
# Only use these for direct client-side AI calls
# EXPO_PUBLIC_ANTHROPIC_API_KEY=sk-ant-...
# EXPO_PUBLIC_OPENAI_API_KEY=sk-...
